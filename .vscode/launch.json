{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go: Main",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "PORT": "8080"
      }
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "cd frontend && npm run dev",
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    }
  ],
  // Compound configuration to launch both Go and Next.js debuggers simultaneously
  "compounds": [
    {
      "name": "Full Stack: Go + Next.js",
      "configurations": [
        "Go: Main",
        "Next.js: debug server-side",
        "Next.js: debug client-side"
      ],
      "stopAll": true
    }
  ]
}
